				{
					"name": "Create board",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", () => {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"const response = pm.response.json();\r",
									"\r",
									"pm.expect(response.id).to.exist\r",
									"pm.collectionVariables.set(\"boardId\", response.id);\r",
									"\r",
									"pm.test(\"Board is created\", () =>{\r",
									"    pm.expect(response.name).to.eql(pm.collectionVariables.get(\"currentBoardName\"));\r",
									"    pm.expect(response.closed).to.be.false;\r",
									"});\r",
									"pm.test(\"Board is private\", () => {\r",
									"    pm.expect(response.prefs.permissionLevel).to.eql('private');\r",
									"})\r",
									"pm.test(\"Calendar is disabled\", () => {\r",
									"    pm.expect(response.prefs.switcherViews.find(x => x.viewType === 'Calendar').enabled).to.be.false;\r",
									"})"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Create a random name and save it\r",
									"const randomName = \"Trello Board \" + Math.floor(Math.random() * 900 + 100);\r",
									"pm.collectionVariables.set(\"currentBoardName\", randomName);\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
