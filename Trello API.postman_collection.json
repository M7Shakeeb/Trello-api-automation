							"listen": "prerequest",
							"script": {
								"exec": [
									"console.clear();\r",
									"\r",
									"// Get the list of all board IDs\r",
									"let allBoards = pm.collectionVariables.get(\"existingBoardIds\");\r",
									"\r",
									"// Check if the list exists and has items\r",
									"if (allBoards.length > 0) {\r",
									"    // Take the LAST ID from the list\r",
									"    let boardToDelete = allBoards.pop(); \r",
									"    \r",
									"    // Set this as the current boardId to delete\r",
									"    pm.collectionVariables.set(\"boardId\", boardToDelete);\r",
									"    \r",
									"    // Update the list (remove the one we just took) so we don't pick it again\r",
									"    pm.collectionVariables.set(\"existingBoardIds\", allBoards);\r",
									"    \r",
									"    console.log(\"ID of next board available to delete: \" + boardToDelete);\r",
									"} else {\r",
									"    console.log(\"There are no boards\");\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
